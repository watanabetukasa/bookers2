<script src="https://kit.fontawesome.com/9e13b4457c.js" crossorigin="anonymous"></script>
<header class="navbar navbar-expand-lg navbar-light">
  <div class="container">
    <a class="navbar-brand p-3" href="/"></a
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavDropdown">
  <h3>Bookers</h3>
  <ul class="navbar-nav ml-auto">
    <% if user_signed_in? %>
      <li>
        <i class="fas fa-home"></i>
        <%= link_to "Home", user_path(current_user.id) ,class:"link"%>
      </li>
      <li>
        <i class="fas fa-users"></i>
        <%= link_to "Users", users_path ,class:"link"%>
      </li>
      <li>
        <i class="fas fa-book-open"></i>
        <%= link_to "Books", books_path(@book) ,class:"link"%>
      </li>
      <li>
        <i class="fas fa-sign-out-alt"></i>
        <%= link_to "logout", destroy_user_session_path, method: :delete ,class:"link"%>
      </li>
    <% else %>
      <li>
        <i class="fas fa-home"></i>
        <%= link_to "Home", root_path ,class:"link" %>
      </li>
      <li>
        <i class="fas fa-link"></i>
        <%= link_to "About", home_about_path ,class:"link" %>
      </li>
      <li>
        <i class="fas fa-user-plus"></i>
        <%= link_to "sign_up", new_user_registration_path ,class:"link" %>
      </li>
      <li>
        <i class="fas fa-sign-in-alt"></i>
        <%= link_to "Login", new_user_session_path ,class:"link" %>
      </li>
    <% end %>
    </div>
</header>
<%= flash[:update] %>

<main>
<div class="container">
  <div class="row">
  <%=render'users/info',user:@user, book:@book %>

<div class="col-md-8 offset-md-1">
<h1>Books</h1>

    <table class="table table-striped">
  <tr>
    <th></th>
    <th>Title</th>
    <th class="user-list-body">Opinion</th>
  </tr>

    <% @books.each do |book| %>

    <tr class="user-list-item">
      <th>
        <%=link_to user_path(@user.id) do %>
          <%=attachment_image_tag book.user,:profile_image,fallback: "no_image.jpg",size: "50x50"%>
        <% end %>
      </th>
      <th class="user-list-body"><%=link_to book.title,"/books/#{book.id}" %></th>
      <th><%=book.body %></th>
    </tr>
    <% end %>
    </tr>
</table>
  </div>
  </div>

</main>

<footer>
  <p>CopyRight Infratop.inc</p>
</footer>
